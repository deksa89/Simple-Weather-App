pipeline {
    agent any

    stages {
        stage("build") {
            steps {
                echo 'Hello World'
                echo "Building the aplication... wooooow!!!"
            }
        }
        stage("test") {
            steps {
                echo 'Hello World'
                echo "testing the aplication... wooooow!!!"
            }
        }
        stage("deploy") {
            steps {
                echo 'Hello World'
                echo "deploying the aplication... wooooow!!!"
            }
        }
    }
}
